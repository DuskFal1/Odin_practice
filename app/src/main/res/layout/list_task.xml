<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#575656"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите задание:"
        android:textColor="#FDFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <Button
        android:id="@+id/btnTask1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Задание №1"
        android:backgroundTint="#28A1E1"
        app:layout_constraintEnd_toEndOf="@+id/tvTask"
        app:layout_constraintStart_toStartOf="@+id/tvTask"
        app:layout_constraintTop_toBottomOf="@+id/tvTask" />

    <Button
        android:id="@+id/btnTask2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Задание №2"
        android:backgroundTint="#28A1E1"
        app:layout_constraintEnd_toEndOf="@+id/btnTask1"
        app:layout_constraintStart_toStartOf="@+id/btnTask1"
        app:layout_constraintTop_toBottomOf="@+id/btnTask1" />
</androidx.constraintlayout.widget.ConstraintLayout>